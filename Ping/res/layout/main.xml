<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<TextView android:layout_height="wrap_content" android:text="@string/hello"
			android:layout_width="fill_parent" android:textSize="18dip"
			android:gravity="center" />
		<TextView android:text="" android:id="@+id/textView2"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		<Spinner android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@+id/spinner2"
			android:prompt="@string/hosts"></Spinner>
		<EditText android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@+id/editText1"
			android:singleLine="true" android:hint="@string/host"></EditText>
		<Spinner android:id="@+id/spinner1" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:prompt="@string/times"
			android:entries="@array/times"></Spinner>
		<Button android:layout_height="wrap_content" android:id="@+id/button1"
			android:text="@string/ping" android:layout_width="100dip"
			android:layout_gravity="center_horizontal" android:textStyle="bold"
			android:textSize="20dip"></Button>
		<TextView android:layout_width="fill_parent" android:id="@+id/textView1"
			android:layout_height="fill_parent" android:scrollbars="vertical"></TextView>
	</LinearLayout>
</ScrollView>